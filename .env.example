# Configuração do Banco
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password_here
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=fastapi_db

# Configuração do JWT
SECRET_KEY=your_secret_key_here  # Gerado por: openssl rand -hex 32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Configuração da Aplicação
ENVIRONMENT=development
LOG_LEVEL=INFO
SENTRY_DSN=

# URLs
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:8000

# Configuração do Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=

# Configuração do E-mail (SMTP)
# Para Gmail, você precisa gerar uma "Senha de App" em https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=seu_email@gmail.com
SMTP_PASSWORD=sua_senha_de_app_aqui
SMTP_FROM_EMAIL=seu_email@gmail.com
SMTP_FROM_NAME=FastAPI App
SMTP_TLS=true
SMTP_SSL=false

# Password Reset Configuration
PASSWORD_RESET_EXPIRE_HOURS=1